    <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp" tools:layout_editor_absoluteY="386dp"
            tools:layout_editor_absoluteX="176dp" android:id="@+id/textViewResult"/>
</android.support.constraint.ConstraintLayout>