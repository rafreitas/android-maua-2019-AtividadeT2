<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main3Activity">

    <Button
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd" android:onClick="addPlastic"
            app:layout_constraintTop_toTopOf="@+id/btnView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextName"
            android:hint="Nome"
            android:layout_marginTop="88dp"
            android:layout_marginBottom="87dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextID" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/editTextColor"
            android:layout_marginStart="13dp" android:layout_marginEnd="13dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextColor"
            android:hint="Cor"
            android:layout_marginTop="175dp"
            android:layout_marginBottom="176dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewResult" app:layout_constraintTop_toTopOf="@+id/editTextID"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp" android:layout_marginEnd="14dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPlasticType" android:hint="Tipo de PlÃ¡stico"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextColor" android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp" android:layout_marginEnd="13dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextID"
            android:hint="ID"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp" android:layout_marginEnd="14dp"/>
    <Button
            android:text="view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnView" android:onClick="showAllPlastics"
            app:layout_constraintTop_toTopOf="@+id/btnDelete" app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            android:layout_marginEnd="40dp"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDelete" android:onClick="deletePlastic"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="302dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ll_entries"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewResult" android:layout_marginBottom="7dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="3dp" android:layout_marginEnd="3dp">
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:id="@+id/textViewResult"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnView" android:layout_marginEnd="33dp"
            app:layout_constraintEnd_toEndOf="@+id/btnView"/>
</android.support.constraint.ConstraintLayout>